{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "esm",
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "demos", "lib", "cjs", "esm"],
  "include": ["src"]
}
